  "version": "0.2.0",
  "configurations": [
    {
      "name": "PPO-Training",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "-env",
        "unity",
        "-tag",
        "ppo"
      ],
      "justMyCode": true
    },
    {
      "name": "PPO-Training-Baselines",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "-d",
        "-env",
        "unity-gym",
        "-tag",
        "ppo"
      ],
      "justMyCode": true
    },
    {
      "name": "PPO-Random-Agent",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "-agent", "random_agent",
        "-env", "unity",
        "-tag", "random-agent-unity",
        "-e", "2000"
      ],
      "justMyCode": true
    }
  ]
}
