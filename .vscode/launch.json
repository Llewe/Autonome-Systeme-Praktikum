  "version": "0.2.0",
  "configurations": [
    {
      "name": "PPO-Training",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "-env",
        "unity",
        "-tag",
        "ppo"
      ],
      "justMyCode": true
    },
    {
      "name": "PPO-Evaluate",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "console": "integratedTerminal",
      "args": [
        "-env",
        "unity",
        "-tag",
        "u/std5/lr_same",
        "-eval",
        "-e", "500",

        //"--env_rngMass",
        //"--env_mass", "2.",
        //"--env_minMass", "0.1",
